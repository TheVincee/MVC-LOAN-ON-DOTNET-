@model List<Uncle.Entities.LoanDb>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<div class="container mt-5 p-4 border rounded-3 shadow-sm bg-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Loan List</h2>
        <a class="btn btn-success btn-lg" href="/loan/create">
            <i class="fas fa-plus"></i> Create New Loan
        </a>
    </div>

    <div class="table-responsive">
        <table id="loan-table" class="table table-striped table-bordered table-hover">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Client</th>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>No of Payment</th>
                    <th>Deduction</th>
                    <th>Date Created</th>
                    <th>Receivable Amount</th>
                    <th>Due Date</th>
                    <th>Payable Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr>
                        <td>@loan.ClientId</td>
                        <td>@loan.Type</td>
                        <td>@loan.Amount</td>
                        <td>@loan.NoOfPayment</td>
                        <td>@loan.Deduction</td>
                        <td>@loan.DateCreated.ToString("yyyy-MM-dd")</td>
                        <td>@loan.RecievableAmount</td>
                        <td>@loan.DueDate</td>
                        <td>@loan.PayableAmount</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning btn-sm" href="/Loan/edit/@loan.Id" title="Update Loan">
                                    <i class="fas fa-edit"></i> Update
                                </a>
                                <a class="btn btn-danger btn-sm" href="/Loan/delete/@loan.Id" title="Delete Loan">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </a>
                                <a class="btn btn-primary btn-sm" href="/payments/viewpayments/@loan.ClientId" title="View Payments">
                                    <i class="fas fa-eye"></i> View Payments
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Font Awesome JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
