@model Uncle.Entities.LoanDb

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Loan Details</h2>
    <table class="table table-bordered table-striped" style="background-color: #ffffff; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        <tbody>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Client</th>
                <td>@Model.ClientId</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Type</th>
                <td>@Model.Type</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Amount</th>
                <td>@Model.Amount</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">No of Payment</th>
                <td>@Model.NoOfPayment</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Deduction</th>
                <td>@Model.Deduction</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Date Created</th>
                <td>@Model.DateCreated.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Receivable Amount</th>
                <td>@Model.RecievableAmount</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Due Date</th>
                <td>@Model.DueDate.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th scope="row" style="background-color: #e9ecef; color: #333;">Payable Amount</th>
                <td>@Model.PayableAmount</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center mt-4">
        <button class="btn btn-secondary" onclick="window.print()">Print</button>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
