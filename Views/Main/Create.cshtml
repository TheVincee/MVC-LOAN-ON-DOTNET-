@model Uncle.Entities.ClientsInfoTb

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5 p-4 border rounded shadow-sm bg-light">
    <h2 class="mb-4">Create Client</h2>
    <form asp-action="Create" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserType"></label>
                    <input asp-for="UserType" class="form-control" />
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ZipCode"></label>
                    <input asp-for="ZipCode" class="form-control" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Birthday"></label>
                    <input asp-for="Birthday" id="birthdayInput" type="date" class="form-control" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" id="ageInput" class="form-control" readonly />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfFather"></label>
                    <input asp-for="NameOfFather" class="form-control" />
                    <span asp-validation-for="NameOfFather" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfMother"></label>
                    <input asp-for="NameOfMother" class="form-control" />
                    <span asp-validation-for="NameOfMother" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CivilStatus"></label>
                    <input asp-for="CivilStatus" class="form-control" />
                    <span asp-validation-for="CivilStatus" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Religion"></label>
                    <input asp-for="Religion" class="form-control" />
                    <span asp-validation-for="Religion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Occupation"></label>
                    <input asp-for="Occupation" class="form-control" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary btn-3d">Submit</button>
            <a asp-action="Index" class="btn btn-secondary btn-3d">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function calculateAge() {
            var currentDate = new Date();
            var birthday = new Date(document.getElementById('birthdayInput').value);
            var age = currentDate.getFullYear() - birthday.getFullYear();
            if (currentDate.getMonth() < birthday.getMonth() || (currentDate.getMonth() === birthday.getMonth() && currentDate.getDate() < birthday.getDate())) {
                age--;
            }
            document.getElementById('ageInput').value = age;
        }

        document.getElementById('birthdayInput').addEventListener('change', calculateAge);
    </script>
}

<style>
    .btn-3d {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 0.5rem;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-3d:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .form-control:read-only {
        background-color: #e9ecef;
    }

    .container {
        max-width: 900px;
        background-color: #f8f9fa;
        border-radius: 15px;
    }

    h2 {
        color: #333;
    }
</style>
