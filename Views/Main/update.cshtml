@model Uncle.Entities.ClientsInfoTb

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create Client</h2>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserType" class="form-label">User Type</label>
                    <input asp-for="UserType" class="form-control form-input" />
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control form-input" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control form-input" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control form-input" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ZipCode" class="form-label">Zip Code</label>
                    <input asp-for="ZipCode" class="form-control form-input" />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Birthday" class="form-label">Birthday</label>
                    <input asp-for="Birthday" id="birthdayInput" type="date" class="form-control form-input">
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input asp-for="Age" id="ageInput" class="form-control form-input" readonly>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfFather" class="form-label">Name of Father</label>
                    <input asp-for="NameOfFather" class="form-control form-input" />
                    <span asp-validation-for="NameOfFather" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NameOfMother" class="form-label">Name of Mother</label>
                    <input asp-for="NameOfMother" class="form-control form-input" />
                    <span asp-validation-for="NameOfMother" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CivilStatus" class="form-label">Civil Status</label>
                    <input asp-for="CivilStatus" class="form-control form-input" />
                    <span asp-validation-for="CivilStatus" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Religion" class="form-label">Religion</label>
                    <input asp-for="Religion" class="form-control form-input" />
                    <span asp-validation-for="Religion" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Occupation" class="form-label">Occupation</label>
                    <input asp-for="Occupation" class="form-control form-input" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-3d btn-primary w-100 py-2">Update</button>
            <a asp-action="Index" class="btn btn-3d btn-secondary w-100 mt-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function calculateAge() {
            var currentDate = new Date();
            var birthday = new Date(document.getElementById('birthdayInput').value);
            var age = currentDate.getFullYear() - birthday.getFullYear();
            if (currentDate.getMonth() < birthday.getMonth() || (currentDate.getMonth() == birthday.getMonth() && currentDate.getDate() < birthday.getDate())) {
                age--;
            }
            document.getElementById('ageInput').value = age;
        }

        document.getElementById('birthdayInput').addEventListener('change', calculateAge);
    </script>
}

<style>
    .form-input {
        background-color: #f5f5f5;
        color: #333;
        border-radius: 0.5rem;
        padding: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-input:focus {
        box-shadow: 0 0 10px rgba(33, 150, 243, 0.5);
        border-color: #2196f3;
    }

    .btn-3d {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 0.5rem;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-3d:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 1rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }
</style>
