@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #e9ecef;">
    <div class="card shadow-lg border-0 rounded-lg" style="background-color: #ffffff; width: 100%; max-width: 400px;">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4" style="color: #333;">Login</h2>
            <form asp-action="Index" method="post">
                <div class="form-group mb-3">
                    <label for="username" class="form-label" style="color: #555;">Username</label>
                    <input type="text" class="form-control border-0 shadow-sm" id="username" name="username" required 
                           style="background-color: #f9f9f9; border-radius: 0.5rem;" />
                </div>
                <div class="form-group mb-3">
                    <label for="password" class="form-label" style="color: #555;">Password</label>
                    <input type="password" class="form-control border-0 shadow-sm" id="password" name="password" required 
                           style="background-color: #f9f9f9; border-radius: 0.5rem;" />
                </div>
                <div class="form-group form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                    <label class="form-check-label" for="rememberMe" style="color: #555;">Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2 btn-3d">Login</button>
                <p class="mt-4 text-center">
                    <a asp-controller="Login" asp-action="Register" class="text-primary">Register</a>
                </p>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-3d {
        background-color: #007bff;
        color: #ffffff;
        border: none;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-3d:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .card {
        width: 100%;
        max-width: 400px;
    }

    .container {
        padding: 0 15px;
    }

    .form-control {
        background-color: #f9f9f9;
        color: #333;
        border-radius: 0.5rem;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control:focus {
        background-color: #e6e6e6;
        color: #333;
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
</style>
