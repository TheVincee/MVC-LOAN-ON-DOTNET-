<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CoopStores</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Local CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrelimCoop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/load-table.css" asp-append-version="true" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.css">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.3.0/css/all.css">

    <!-- Additional Styles for Modern and 3D Effects -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f9;
            color: #333;
        }
        
        .navbar {
            background-color: #2bdf70;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff;
        }

        .nav-link {
            color: #fff;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #d1e8e2;
        }

        .btn-outline-light {
            border-color: #fff;
            color: #fff;
            transition: all 0.3s ease;
        }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #2bdf70;
        }

        .navbar-toggler-icon {
            filter: brightness(0) invert(1);
        }

        .d-flex.align-items-center {
            position: relative;
        }

        .d-flex.align-items-center .btn {
            transform: translateZ(0);
            transition: transform 0.2s ease;
        }

        .d-flex.align-items-center .btn:hover {
            transform: translateZ(15px);
        }

        h5.mb-0.fw-bold {
            color: #fff;
        }

        small.text-muted {
            color: rgba(255, 255, 255, 0.7);
        }

        /* 3D Button Effect */
        .btn-3d {
            position: relative;
            display: inline-block;
            padding: 10px 20px;
            background: #2bdf70;
            color: #fff;
            font-weight: bold;
            border-radius: 5px;
            box-shadow: 0 5px 0 #23b159, 0 10px 20px rgba(0, 0, 0, 0.2);
            transition: all 0.2s ease;
        }

        .btn-3d:hover {
            box-shadow: 0 2px 0 #23b159, 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: translateY(2px);
        }

        /* 3D Shadow for Container */
        main.container {
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transform: translateZ(0);
            transition: all 0.3s ease;
        }

        main.container:hover {
            transform: translateZ(15px);
        }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" href="#">LendingStores</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Main" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Loan" asp-action="Index">Users</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <div class="me-3 text-end">
                        </div>
                        <a class="btn btn-outline-light btn-3d" href="@Url.Action("Logout", "Login")">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    }

    <main class="container mt-4">
        @RenderBody()
    </main>
    
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <!-- Local JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/table.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
